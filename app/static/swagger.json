{
  "swagger": "2.0",
  "info": {
    "title": "Chess.com Play Style API",
    "version": "1.0.0",
    "description": "API for analyzing and mimicking chess.com player styles"
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "ApiKey": {
      "type": "apiKey",
      "in": "header",
      "name": "X-API-Key"
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user and generate API key",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "password"],
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "minLength": 6
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "API key generated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "api_key": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Email already registered"
          }
        }
      }
    },
    "/auth/update": {
      "put": {
        "summary": "Update user API key",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "password"],
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API key updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "api_key": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/auth/delete": {
      "delete": {
        "summary": "Delete user account",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "password"],
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/player/profile/{username}": {
      "get": {
        "summary": "Get player profile and statistics",
        "tags": ["Player"],
        "security": [
          {
            "ApiKey": []
          }
        ],
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Player profile retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "stats": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Invalid username"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/player/style/{username}": {
      "get": {
        "summary": "Analyze player's chess playing style",
        "tags": ["Player"],
        "security": [
          {
            "ApiKey": []
          }
        ],
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Player style analysis retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "style_analysis": {
                  "type": "string"
                },
                "monthly_summaries": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid username"
          },
          "404": {
            "description": "No game history available"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}